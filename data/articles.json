    let currentLimit = 6;
    let filteredArticles = [...articles];

    function init() {
        const hash = window.location.hash;
        if (hash.startsWith('#/')) {
            const slug = hash.replace('#/', '');
            const post = articles.find(a => a.slug === slug);
            if (post) { showDetail(post); return; }
        }
        showHome();
    }

    function showHome() {
        document.getElementById('home-view').style.display = 'block';
        document.getElementById('detail-view').style.display = 'none';
        renderPosts();
        renderPopular();
    }

    function showDetail(post) {
        document.getElementById('home-view').style.display = 'none';
        document.getElementById('detail-view').style.display = 'grid';
        document.getElementById('articleContent').innerHTML = `
            <button onclick="goHome(event)" style="margin-bottom:20px; color:var(--primary); border:none; background:none; cursor:pointer; font-weight:bold;">
                <i class="fas fa-arrow-left"></i> Kembali
            </button>
            <h1>${post.title}</h1>
            <img src="${post.img}" style="width:100%; border-radius:15px; margin:20px 0;">
            <div class="content-text">${post.content}</div>
        `;
        window.scrollTo(0,0);
    }

    function renderPosts() {
        const grid = document.getElementById('postGrid');
        const displayData = filteredArticles.slice(0, currentLimit);
        
        grid.innerHTML = displayData.map(post => `
            <div class="post-card" onclick="location.hash='#/${post.slug}'">
                <img src="${post.img}" class="post-img">
                <div class="post-info">
                    <small style="color:var(--primary); font-weight:bold;">${post.cat}</small>
                    <h3 style="margin:10px 0">${post.title}</h3>
                    <p style="font-size:0.9rem; color:var(--muted)">${post.desc}</p>
                </div>
            </div>
        `).join('');

        document.getElementById('load-more').style.display = currentLimit < filteredArticles.length ? 'block' : 'none';
    }

    function renderPopular() {
        const pop = articles.slice(0, 5);
        document.getElementById('popularPosts').innerHTML = pop.map(p => `
            <div style="margin-bottom:15px; cursor:pointer; border-bottom:1px solid var(--border); padding-bottom:10px" onclick="location.hash='#/${p.slug}'">
                <h4 style="font-size:0.9rem;">${p.title}</h4>
            </div>
        `).join('');
    }

    function filterByCat(cat) {
        document.querySelectorAll('.cat-btn').forEach(btn => btn.classList.remove('active'));
        filteredArticles = (cat === 'All') ? [...articles] : articles.filter(a => a.cat === cat);
        currentLimit = 6;
        renderPosts();
    }

    function goHome(e) { e.preventDefault(); window.location.hash = ''; showHome(); }

    window.addEventListener('hashchange', init);
    window.onload = init;
</script>
